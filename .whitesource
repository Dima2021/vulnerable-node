{ 
  "scanSettings": {
    "configMode": "AUTO",
    "configExternalURL": "",
    "projectToken": "",
    "baseBranches": []
  },
  "checkRunSettings": {
    "vulnerableCheckRunConclusionLevel": "failure",
    "displayMode": "diff"
  },
  "issueSettings": {
    "minSeverityLevel": "LOW",
    "issueType": "DEPENDENCY"
  },
  "remediateSettings": {
    "workflowRules": {
      "enabled": false,
      "workflowRules.minVulnerabilityScore": "9.0"
    },
    "enableRenovate": true,
    "extends": [
      "config:base",
	  "github>whitesource/merge-confidence:beta"
    ],
	"packageRules": [
		/* Automerge High and Very High Confidence updates */
		{
		  "matchConfidence": ["high", "very high"],
		  "matchUpdateTypes": ["patch", "minor"],
		  "automerge": true
		},
		/* Group High and Very High Confidence updates */
		{
		  "groupName": "high merge confidence",
		  "matchConfidence": ["high", "very high"]
		}
	]
  }
}
